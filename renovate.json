{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "osvVulnerabilityAlerts": true,
  "regexManagers": [
    {
      "fileMatch": ["(^|/)Dockerfile$"],
      "matchStrings": ["# renovate (?<datasource>[^:]+):(?<depName>[^\\s]+)\\s+ARG .*_VERSION=(?<currentValue>[^\\s]*)"],
      "versioningTemplate": "maven"
    }
  ]
}
